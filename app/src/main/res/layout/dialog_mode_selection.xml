<!-- ðŸŽ® GAMIFIED MODE SELECTION DIALOG -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/game_background">

    <!-- ðŸŽ¯ GAME HEADER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/game_dialog_header_background"
        android:padding="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginBottom="24dp">

        <TextView
            android:id="@+id/dialogTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ® CHOOSE YOUR GAME MODE"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"
            android:letterSpacing="0.1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heads up!! Once you launch your game on quiz mode or Code builder one attempt will be used."
            android:textSize="14sp"
            android:textColor="@color/game_red_light"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_marginTop="4dp" />

    </LinearLayout>

    <!-- ðŸ§  QUIZ MODE -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnQuizMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/game_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical">

            <!-- ðŸ§  QUIZ ICON -->
            <LinearLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/game_quiz_icon_background"
                android:gravity="center"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ§ "
                    android:textSize="24sp" />

            </LinearLayout>

            <!-- ðŸ“Š QUIZ INFO -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Quiz Mode"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/game_text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test your knowledge!"
                    android:textSize="14sp"
                    android:textColor="@color/game_text_secondary"
                    android:layout_marginTop="2dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <ProgressBar
                        android:id="@+id/quizAttemptLoading"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:indeterminate="true"
                        android:visibility="visible"
                        android:layout_marginEnd="8dp"
                        android:indeterminateTint="@color/game_red_primary" />

                    <TextView
                        android:id="@+id/quizAttemptCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading attempts..."
                        android:textSize="12sp"
                        android:textColor="@color/game_text_muted" />
                </LinearLayout>

            </LinearLayout>

            <!-- â–¶ï¸ PLAY ICON -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â–¶ï¸"
                android:textSize="20sp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ðŸ—ï¸ CODE BUILDER -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnCodeBuilder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/game_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical">

            <!-- ðŸ—ï¸ CODE BUILDER ICON -->
            <LinearLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/game_code_icon_background"
                android:gravity="center"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ—ï¸"
                    android:textSize="24sp" />

            </LinearLayout>

            <!-- ðŸ“Š CODE BUILDER INFO -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Code Builder"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/game_text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Build your code!"
                    android:textSize="14sp"
                    android:textColor="@color/game_text_secondary"
                    android:layout_marginTop="2dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="8dp">

                    <ProgressBar
                        android:id="@+id/codeBuilderAttemptLoading"
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:indeterminate="true"
                        android:visibility="visible"
                        android:layout_marginEnd="8dp"
                        android:indeterminateTint="@color/game_red_primary" />

                    <TextView
                        android:id="@+id/codeBuilderAttemptCount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Loading attempts..."
                        android:textSize="12sp"
                        android:textColor="@color/game_text_muted" />
                </LinearLayout>

            </LinearLayout>

            <!-- â–¶ï¸ PLAY ICON -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â–¶ï¸"
                android:textSize="20sp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- ðŸ’» COMPILER MODE -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/btnCompilerMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/game_card">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="center_vertical">

            <!-- ðŸ’» COMPILER ICON -->
            <LinearLayout
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@drawable/game_compiler_icon_background"
                android:gravity="center"
                android:layout_marginEnd="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’»"
                    android:textSize="24sp" />

            </LinearLayout>

            <!-- ðŸ“Š COMPILER INFO -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Compiler Mode"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/game_text_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Code and run programs!"
                    android:textSize="14sp"
                    android:textColor="@color/game_text_secondary"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <!-- â–¶ï¸ PLAY ICON -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â–¶ï¸"
                android:textSize="20sp" />

        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <!-- âŒ CANCEL BUTTON -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCancel"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:text="âŒ Cancel"
        android:textColor="@color/game_text_primary"
        android:backgroundTint="@color/game_gray_light"
        app:cornerRadius="16dp"
        android:textSize="16sp"
        android:textStyle="bold" />

</LinearLayout>