<!-- ðŸŽ® GAMIFIED CHART DIALOG -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/game_background"
    android:padding="16dp">

    <!-- ðŸ“Š CHART HEADER -->
    <TextView
        android:id="@+id/chartTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Student Chart"
        android:textColor="@color/game_text_primary"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="8dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ðŸ“ˆ CHART CONTAINER -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/chartCard"
        android:layout_width="0dp"
        android:layout_height="400dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/chartTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp" />

    </com.google.android.material.card.MaterialCardView>

    <!-- ðŸ“‹ CHART INFO -->
    <LinearLayout
        android:id="@+id/chartInfoContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/chartCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/chartInfoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chart showing number of students who achieved passing rate per lesson\nQuiz: 8/15 passing | Code Builder: 15/25 passing"
            android:textColor="@color/game_text_secondary"
            android:textSize="14sp"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Blue Line: Quiz | Orange Line: Code Builder"
                android:textColor="@color/game_text_secondary"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- âš¡ LOADING STATE -->
    <LinearLayout
        android:id="@+id/loadingContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:padding="20dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/chartTitle"
        app:layout_constraintBottom_toBottomOf="@id/chartCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ProgressBar
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_marginEnd="16dp"
            android:indeterminateTint="@color/game_red_primary" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Loading chart data..."
            android:textColor="@color/game_text_secondary"
            android:textSize="16sp" />

    </LinearLayout>

    <!-- ðŸŽ¯ EMPTY STATE -->
    <LinearLayout
        android:id="@+id/emptyStateContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="32dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/chartTitle"
        app:layout_constraintBottom_toBottomOf="@id/chartCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ“Š"
            android:textSize="48sp"
            android:layout_marginBottom="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No data available"
            android:textColor="@color/game_text_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Students need to complete lessons to see chart data"
            android:textColor="@color/game_text_secondary"
            android:textSize="14sp"
            android:gravity="center" />

    </LinearLayout>

    <!-- ðŸ”˜ ACTION BUTTONS -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        app:layout_constraintTop_toBottomOf="@id/chartInfoContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/btnRefresh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸ”„ Refresh"
            android:textColor="@color/white"
            android:paddingHorizontal="20dp"
            android:paddingVertical="12dp"
            android:layout_marginEnd="8dp" />

        <Button
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Close"
            android:textColor="@color/white"
            android:paddingHorizontal="24dp"
            android:paddingVertical="12dp" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
