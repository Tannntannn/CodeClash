<!-- ðŸŽ® GAMIFIED CHART DIALOG -->
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:background="@color/game_background"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ðŸ“Š CHART HEADER -->
        <TextView
            android:id="@+id/chartTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Student Chart"
            android:textColor="@color/game_text_primary"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="12dp" />

        <!-- ðŸ“ˆ CHART CONTAINER -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/chartCard"
            android:layout_width="match_parent"
            android:layout_height="560dp"
            android:layout_marginBottom="24dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="@color/white">

            <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/barChart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="8dp" />

        </com.google.android.material.card.MaterialCardView>

        <!-- âš¡ LOADING STATE -->
        <LinearLayout
            android:id="@+id/loadingContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:padding="20dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="16dp"
                android:indeterminateTint="@color/game_red_primary" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loading chart data..."
                android:textColor="@color/game_text_secondary"
                android:textSize="16sp" />

        </LinearLayout>

        <!-- ðŸŽ¯ EMPTY STATE -->
        <LinearLayout
            android:id="@+id/emptyStateContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="32dp"
            android:layout_marginBottom="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“Š"
                android:textSize="48sp"
                android:layout_marginBottom="16dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="No data available"
                android:textColor="@color/game_text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Students need to complete lessons to see chart data"
                android:textColor="@color/game_text_secondary"
                android:textSize="14sp"
                android:gravity="center" />

        </LinearLayout>

        <!-- ðŸ“‹ CHART INFO -->
        <LinearLayout
            android:id="@+id/chartInfoContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/chart_info_background"
            android:padding="16dp"
            android:layout_marginBottom="16dp">

            <TextView
                android:id="@+id/chartInfoText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Percentage of students who met the passing score per lesson.\nQuiz â‰¥8/15 Â· Code Builder â‰¥15/25 Â· Compiler â‰¥50/100"
                android:textColor="@color/game_text_primary"
                android:textSize="14sp"
                android:letterSpacing="0.02"
                android:gravity="center"
                android:layout_marginBottom="10dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/game_gray_border" />

        </LinearLayout>

        <!-- ðŸ”˜ ACTION BUTTONS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp">

            <Button
                android:id="@+id/btnRefresh"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Refresh"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:letterSpacing="0.05"
                android:backgroundTint="@color/game_red_primary"
                android:paddingHorizontal="20dp"
                android:paddingVertical="14dp"
                android:layout_marginEnd="12dp"
                android:elevation="2dp" />

            <Button
                android:id="@+id/btnClose"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Close"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:letterSpacing="0.05"
                android:backgroundTint="@color/game_text_secondary"
                android:paddingHorizontal="20dp"
                android:paddingVertical="14dp"
                android:elevation="2dp" />

        </LinearLayout>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
