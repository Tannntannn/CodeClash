<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/redbg"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/centerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="48dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_max="400dp">

        <!-- Logo -->

        <!-- JOIN CLASS Button -->
        <ImageView
            android:id="@+id/logoImage"
            android:layout_width="wrap_content"
            android:layout_height="233dp"
            android:layout_marginBottom="48dp"
            android:contentDescription="Code Clash Logo"
            android:scaleType="centerInside"
            android:src="@drawable/newlogo" />

        <ImageButton
            android:id="@+id/joinClassButton"
            android:layout_width="262dp"
            android:layout_height="105dp"
            android:background="@drawable/joinclass" />

        <!-- MY CLASSES Button -->
        <ImageButton
            android:id="@+id/myClassesButton"
            android:layout_width="262dp"
            android:layout_height="100dp"
            android:background="@drawable/myclass" />

        <!-- SETTINGS Button -->
        <ImageButton
            android:id="@+id/settingsButton"
            android:layout_width="262dp"
            android:layout_height="100dp"
            android:background="@drawable/settings" />

        <ImageButton
            android:id="@+id/leaboardsButton"
            android:layout_width="262dp"
            android:layout_height="100dp"
            android:background="@drawable/leaderboards" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>