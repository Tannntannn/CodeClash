<!-- ðŸŽ® GAMIFIED STUDENT CLASS CARD -->
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    android:layout_marginVertical="6dp"
    app:cardCornerRadius="24dp"
    app:cardElevation="12dp"
    app:cardBackgroundColor="@color/game_card"
    app:strokeColor="@color/game_red_light"
    app:strokeWidth="2dp"
    android:foreground="?attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- ðŸŽ¯ GAME HEADER -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/game_class_header_background"
            android:padding="16dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="ðŸŽ“ CLASS"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                android:letterSpacing="0.1" />

            <TextView
                android:id="@+id/tvClassCode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ABC123"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold"
                android:background="@drawable/game_badge_background"
                android:paddingHorizontal="12dp"
                android:paddingVertical="4dp" />

        </LinearLayout>

        <!-- ðŸ“š CLASS CONTENT -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- ðŸŽ® CLASS ICON -->
            <LinearLayout
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/game_class_icon_background"
                android:gravity="center"
                android:layout_marginEnd="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸŽ®"
                    android:textSize="28sp" />

            </LinearLayout>

            <!-- ðŸ“Š CLASS INFO (simplified) -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvYearBlock"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1st Year - Block A"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/game_text_primary"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/tvTeacherName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ‘¨â€ðŸ« Loading teacher..."
                    android:textSize="14sp"
                    android:textColor="@color/game_text_secondary" />

                <TextView
                    android:id="@+id/tvClassCodeDisplay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Class Code: ABC123"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/game_text_primary"
                    android:layout_marginTop="4dp" />

            </LinearLayout>

            <!-- ðŸŽ¯ ACTION BUTTONS -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <!-- Lessons Button -->
                <LinearLayout
                    android:id="@+id/btnLessons"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/game_action_button_background"
                    android:gravity="center"
                    android:layout_marginBottom="8dp"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸ“–"
                        android:textSize="20sp" />

                </LinearLayout>

                <!-- Leave Class Button -->
                <LinearLayout
                    android:id="@+id/btnLeaveClass"
                    android:layout_width="56dp"
                    android:layout_height="56dp"
                    android:background="@drawable/game_leave_button_background"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸšª"
                        android:textSize="20sp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>