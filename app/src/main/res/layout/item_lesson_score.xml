<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginBottom="8dp"
    android:background="@drawable/lesson_score_background"
    android:padding="12dp">

    <!-- Lesson Name -->
    <TextView
        android:id="@+id/lessonName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Lesson Name"
        android:textColor="#333333"
        android:textSize="14sp"
        android:textStyle="bold"
        android:layout_marginBottom="8dp" />

    <!-- Scores Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Quiz Score Card -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/quiz_score_background"
            android:padding="8dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“ Quiz"
                android:textColor="#4CAF50"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/quizScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/quizAttempts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/3"
                android:textColor="#666666"
                android:textSize="10sp" />

        </LinearLayout>

        <!-- Code Builder Score Card -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/code_builder_score_background"
            android:padding="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ’» Code Builder"
                android:textColor="#2196F3"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/codeBuilderScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#2196F3"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/codeBuilderAttempts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/3"
                android:textColor="#666666"
                android:textSize="10sp" />

        </LinearLayout>

        <!-- Compiler Score Card -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/code_builder_score_background"
            android:padding="8dp"
            android:layout_marginStart="4dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="âš™ï¸ Compiler"
                android:textColor="#FF9800"
                android:textSize="12sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <TextView
                android:id="@+id/compilerScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="--"
                android:textColor="#FF9800"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="2dp" />

            <TextView
                android:id="@+id/compilerAttempts"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/1"
                android:textColor="#666666"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
